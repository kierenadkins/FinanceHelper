@using FinanceHelper.Domain.Objects.Finance.ExpenseTracking
@using FinanceHelper.Web.Models.Finance
@model IEnumerable<CategoryModel>

<div class="container-xxl py-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1">Expense Categories</h2>
            <p class="text-muted mb-0">Structure, review and manage your spending</p>
        </div>
        <button class="btn btn-primary btn-lg rounded-pill px-4 shadow"
                data-bs-toggle="modal"
                data-bs-target="#addCategoryModal">
            <i class="bi bi-plus-lg me-2"></i>Add Category
        </button>
    </div>

    <div class="modal fade" id="addCategoryModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 rounded-5 shadow-lg">
                <div class="modal-header border-0 pb-0">
                    <h5 class="fw-bold"><i class="bi bi-folder-plus me-2"></i>New Category</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form asp-controller="Category" asp-action="AddCategory" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-body pt-3">
                        <label class="form-label fw-semibold">Category Type</label>
                        <select name="categoryType" class="form-select form-select-lg rounded-pill" required>
                            <option value="">Select type</option>
                            @foreach (var type in Enum.GetValues(typeof(CategoryType)).Cast<CategoryType>())
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                        @if (TempData["AddCategoryError"] != null)
                        {
                            <div class="alert alert-danger mt-3">@TempData["AddCategoryError"]</div>
                        }
                    </div>
                    <div class="modal-footer border-0">
                        <button class="btn btn-light rounded-pill" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary rounded-pill px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 rounded-5 shadow-lg">
                <div class="modal-body text-center p-5">
                    <i class="bi bi-trash display-4 text-danger mb-3"></i>
                    <h5 class="fw-bold">Delete <span id="deleteName"></span>?</h5>
                    <p class="text-muted">This action cannot be undone.</p>
                    <form id="deleteForm" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="deleteId" name="id" />
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger rounded-pill px-4">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @foreach (var cat in Model ?? Enumerable.Empty<CategoryModel>())
    {
        <div class="card border-0 shadow-sm rounded-5 mb-5 overflow-hidden">
            <div class="card-header bg-body-secondary d-flex justify-content-between align-items-center px-4 py-3">
                <h5 class="fw-semibold mb-0">@cat.Name</h5>
                <div class="btn-group">
                    <a asp-controller="Category" asp-action="AddSubCategory" asp-route-categoryId="@cat.Id"
                       class="btn btn-success btn-sm rounded-pill">
                        <i class="bi bi-plus"></i>
                    </a>
                    <button class="btn btn-outline-danger btn-sm rounded-pill"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-id="@cat.Id"
                            data-name="@cat.Name"
                            data-action="@Url.Action("DeleteCategory", "Category")">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Yearly</th>
                            <th>Monthly</th>
                            <th>Weekly</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sub in cat.SubCategories ?? Enumerable.Empty<dynamic>())
                        {
                            <tr>
                                <td class="fw-semibold">@sub.Name</td>
                                <td>
                                    <span class="badge rounded-pill @(sub.SubCategoryType == SubCategoryType.Expense ? "bg-danger-subtle text-danger" : "bg-success-subtle text-success")">@sub.SubCategoryType</span>
                                </td>
                                <td>@sub.YearlyCost.ToString("C")</td>
                                <td>@sub.MonthlyCost.ToString("C")</td>
                                <td>@sub.WeeklyCost.ToString("C")</td>
                                <td class="text-end">
                                    <a asp-controller="Category" asp-action="EditSubCategory" asp-route-subCategoryId="@sub.Id"
                                       class="btn btn-warning btn-sm rounded-pill"><i class="bi bi-pencil"></i></a>
                                    <button class="btn btn-outline-danger btn-sm rounded-pill"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-id="@sub.Id"
                                            data-name="@sub.Name"
                                            data-action="@Url.Action("DeleteSubCategory", "Category")">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                        <tr class="fw-bold table-primary">
                            <td>Total</td>
                            <td></td>
                            <td>@cat.YearlyCost.ToString("C")</td>
                            <td>@cat.MonthlyCost.ToString("C")</td>
                            <td>@cat.WeeklyCost.ToString("C")</td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<script>
    document.getElementById('deleteModal').addEventListener('show.bs.modal', e => {
        const b = e.relatedTarget;
        document.getElementById('deleteId').value = b.dataset.id;
        document.getElementById('deleteName').textContent = b.dataset.name;
        document.getElementById('deleteForm').action = b.dataset.action;
    });
</script>