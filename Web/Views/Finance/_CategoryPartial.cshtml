@using Application.Domain.Finance.ExpenseTracking
@model IEnumerable<Web.Models.Finance.CategoryModel>

<div class="container-fluid px-4 py-3">

    <!-- ================= HEADER ================= -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Expense Categories</h2>
            <small class="text-muted">Manage categories and subcategories</small>
        </div>

        <button class="btn btn-primary btn-lg shadow-sm"
                data-bs-toggle="modal"
                data-bs-target="#addCategoryModal">
            <i class="bi bi-plus-circle me-2"></i>Add Category
        </button>
    </div>

    <!-- ================= ADD CATEGORY MODAL ================= -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 shadow border-0">

                <div class="modal-header bg-primary text-white rounded-top-4">
                    <h5 class="modal-title fw-semibold">
                        <i class="bi bi-folder-plus me-2"></i>New Category
                    </h5>
                    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <form asp-controller="Category" asp-action="AddCategory" method="post">
                    @Html.AntiForgeryToken()

                    <div class="modal-body p-4">
                        <label class="form-label fw-semibold">Category Type</label>
                        <select name="categoryType" class="form-select form-select-lg" required>
                            <option value="">Select type</option>
                            @foreach (var type in Enum.GetValues(typeof(CategoryType)).Cast<CategoryType>())
                            {
                                <option value="@type">@type</option>
                            }
                        </select>

                        @if (TempData["AddCategoryError"] != null)
                        {
                            <div class="alert alert-danger mt-3">
                                @TempData["AddCategoryError"]
                            </div>
                        }
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary btn-lg px-4">Save</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <!-- ================= REUSABLE DELETE MODAL ================= -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 shadow border-0">

                <div class="modal-header bg-danger text-white rounded-top-4">
                    <h5 class="modal-title fw-semibold">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
                    </h5>
                    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteId" name="id" />

                    <div class="modal-body text-center p-4">
                        <i class="bi bi-trash text-danger display-4 mb-3"></i>

                        <p class="fs-5 mb-1">Delete</p>
                        <p class="fw-bold text-danger fs-5 mb-0">
                            “<span id="deleteName"></span>”
                        </p>

                        <small class="text-muted d-block mt-2">
                            This action cannot be undone.
                        </small>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            Delete
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <!-- ================= CATEGORY LIST ================= -->
    @if (Model?.Any() == true)
    {
        foreach (var cat in Model)
        {
            decimal yearly = 0, monthly = 0, weekly = 0;

            <div class="card shadow-sm border-0 rounded-4 mb-4">

                <!-- CATEGORY HEADER -->
                <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">@cat.Name</h5>

                    <div class="btn-group">
                        <a asp-controller="Category" asp-action="AddSubCategory"
                           asp-route-categoryId="@cat.Id"
                           class="btn btn-success btn-sm"
                           title="Add Subcategory">
                            <i class="bi bi-plus-circle"></i>
                        </a>

                        <button class="btn btn-danger btn-sm"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal"
                                data-id="@cat.Id"
                                data-name="@cat.Name"
                                data-action="@Url.Action("DeleteCategory", "Category")">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>

                <!-- SUBCATEGORY TABLE -->
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Yearly</th>
                                    <th>Monthly</th>
                                    <th>Weekly</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var sub in cat.SubCategories ?? Enumerable.Empty<dynamic>())
                                {
                                    yearly += sub.YearlyCost;
                                    monthly += sub.MonthlyCost;
                                    weekly += sub.WeeklyCost;

                                    <tr>
                                        <td class="fw-semibold">@sub.Name</td>
                                        <td>
                                            <span class="badge @(sub.SubCategoryType == SubCategoryType.Expense ? "bg-danger" : "bg-success")">
                                                @sub.SubCategoryType
                                            </span>
                                            <span class="badge bg-secondary">@sub.PaymentFrequency</span>
                                        </td>
                                        <td>@sub.YearlyCost.ToString("C")</td>
                                        <td>@sub.MonthlyCost.ToString("C")</td>
                                        <td>@sub.WeeklyCost.ToString("C")</td>
                                        <td class="text-end">
                                            <a asp-controller="Category" asp-action="EditSubCategory"
                                               asp-route-subCategoryId="@sub.Id"
                                               class="btn btn-warning btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <button class="btn btn-danger btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal"
                                                    data-id="@sub.Id"
                                                    data-name="@sub.Name"
                                                    data-action="@Url.Action("DeleteSubCategory", "Category")">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }

                                <tr class="table-primary fw-bold">
                                    <td>Total</td>
                                    <td></td>
                                    <td>@yearly.ToString("C")</td>
                                    <td>@monthly.ToString("C")</td>
                                    <td>@weekly.ToString("C")</td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        }
    }
</div>

<!-- ================= SCRIPT ================= -->
<script>
    document.addEventListener('DOMContentLoaded', function () {

        var deleteModal = document.getElementById('deleteModal');

        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;

            document.getElementById('deleteId').value = button.dataset.id;
            document.getElementById('deleteName').textContent = button.dataset.name;
            document.getElementById('deleteForm').action = button.dataset.action;
        });

    });
</script>
