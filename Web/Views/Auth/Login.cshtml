@using FinanceHelper.Web.Models.Auth
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center mb-4">Sign In</h2>

    <form asp-action="Login" method="post" novalidate>
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label asp-for="EmailAddress" class="form-label"></label>
            <input asp-for="EmailAddress" class="form-control" placeholder="you@example.com" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model?.Error))
        {
            <div class="alert alert-danger py-2">
                @Model.Error
            </div>
        }

        <button type="submit" class="btn btn-primary w-100">Login</button>

        <div class="text-center mt-3">
            <small>
                Don’t have an account?
                <a asp-controller="Auth" asp-action="Signup">Register</a>
            </small>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}